<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#Bf9223">

    @android:color/holo_red_dark
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Header"
        android:text="Click start to Check your reflex"
        android:layout_gravity="center"
        android:background="@drawable/custom_text"
        android:textColor="#Bf9223"
        android:gravity="center"
        android:minHeight="50dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        />
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:background="@drawable/custom_text"
       >
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/Currentlevel"
           android:text="Level: "
           android:layout_gravity="center"
           android:textColor="#Bf9223"
           android:gravity="center"
           android:minHeight="30dp"
           android:textSize="12dp"
           android:textStyle="bold"
           android:fontFamily="monospace"
           />
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/CurrentlevelValue"
           android:text="1"
           android:layout_gravity="center"
           android:textColor="#Bf9223"
           android:gravity="center"
           android:minHeight="30dp"
           android:textSize="12dp"
           android:textStyle="bold"
           android:fontFamily="monospace"
           />
       </LinearLayout>
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:background="@drawable/custom_text"
           >
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/CurrentTime"
           android:text="Time:  "
           android:layout_gravity="center"
           android:textColor="#Bf9223"
           android:gravity="center"
           android:minHeight="30dp"
           android:textSize="12dp"
           android:textStyle="bold"
           android:fontFamily="monospace"
           />
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/CurrentTimeValue"
           android:text="1"
           android:layout_gravity="center"
           android:textColor="#Bf9223"
           android:gravity="center"
           android:minHeight="30dp"
           android:textSize="12dp"
           android:textStyle="bold"
           android:fontFamily="monospace"
           />
       </LinearLayout>
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">



    <Button
        android:id="@+id/challagneManage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/round_button"
        android:gravity="center"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:textSize="17dp"
        android:text=""
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:onClick="manageChallange"
        />


    </LinearLayout>





</LinearLayout>